import { useRouter } from "expo-router";
import React, { useEffect, useRef, useState } from "react";
import {
  ActivityIndicator,
  Animated,
  Dimensions,
  Image,
  ImageBackground,
  Keyboard,
  KeyboardAvoidingView,
  Platform,
  SafeAreaView,
  StyleSheet,
  Text,
  TextInput,
  TouchableOpacity,
  View,
} from "react-native";

const { width } = Dimensions.get("window");

// ✅ SYNTAX FIXED: Added closing quote (') and semicolon (;).
// ✅ LOGIC FIXED: Corrected endpoint from /sensor-data to /login.
const API_URL = 'https://donn-hypsicephalic-sapientially.ngrok-free.dev/Capstone_Test/public/index.php/api/login';

export default function LoginPage() {
  const router = useRouter();
  const [showPassword, setShowPassword] = useState(false);
  const [email, setEmail] = useState("");
  const [password, setPassword] = useState("");
  const [errorMessage, setErrorMessage] = useState("");
  const [isLoggingIn, setIsLoggingIn] = useState(false); // New loading state
  const shift = useRef(new Animated.Value(0)).current;

  // --- Keyboard Animation Logic ---
  useEffect(() => {
    const keyboardDidShowSub = Keyboard.addListener("keyboardDidShow", () => {
      Animated.timing(shift, {
        toValue: -120,
        duration: 250,
        useNativeDriver: true,
      }).start();
    });

    const keyboardDidHideSub = Keyboard.addListener("keyboardDidHide", () => {
      Animated.timing(shift, {
        toValue: 0,
        duration: 250,
        useNativeDriver: true,
      }).start();
    });

    return () => {
      keyboardDidShowSub.remove();
      keyboardDidHideSub.remove();
    };
  }, [shift]);

  // --- Login Handler with Real API Logic ---
  const handleLogin = async () => {
    // 1. Input Validation
    let error = "";
    if (!email.trim()) {
      error = "Email cannot be empty";
    } else if (!password.trim()) {
      error = "Password cannot be empty";
    }

    if (error) {
      setErrorMessage(error);
      return;
    }

    setErrorMessage("");
    setIsLoggingIn(true); // Start loading state

    // 2. API Call
    try {
      const response = await fetch(API_URL, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ 
          email: email.trim(), 
          password: password.trim() 
        }),
      });

      // Handle the server response (even non-200 status codes)
      const data = await response.json();

      if (response.ok) {
        // Success (200-299 status code)
        console.log("Login successful! Navigating to dashboard...");
        router.replace("/(tabs)/dashboard");
      } else {
        // Failure (e.g., 401 Unauthorized, 404 Not Found)
        setErrorMessage(data.message || data.error || "Invalid email or password.");
      }
    } catch (err) {
      // Network/Fetch error (e.g., server offline, wrong IP, network issue)
      console.error("Login Network Error:", err);
      setErrorMessage("Could not connect to the server. Check your network or API_URL.");
    } finally {
      setIsLoggingIn(false); // End loading state
    }
  };
  // ---------------------------------------------

  return (
    <SafeAreaView style={styles.container}>
      <ImageBackground
        source={require("../../assets/images/bg.png")}
        style={styles.background}
        resizeMode="cover"
      >
        <KeyboardAvoidingView
          style={styles.keyboardView}
          behavior={Platform.OS === "ios" ? "padding" : undefined}
        >
          <Animated.View style={[styles.card, { transform: [{ translateY: shift }] }]}>
            <Image
              source={require("../../assets/images/logo.png")}
              style={styles.logo}
            />

            <Text style={styles.welcomeText}>HydroSense</Text>

            <Text style={styles.label}>Enter Email Address</Text>
            <TextInput
              style={[
                styles.input,
                errorMessage.includes("Email") && { borderColor: "red" },
              ]}
              placeholder="Email"
              placeholderTextColor="#888"
              value={email}
              onChangeText={setEmail}
              keyboardType="email-address"
              autoCapitalize="none"
              editable={!isLoggingIn} // Disable input while logging in
            />

            <Text style={styles.label}>Enter Password</Text>
            <View
              style={[
                styles.passwordContainer,
                errorMessage.includes("Password") && { borderColor: "red" },
              ]}
            >
              <TextInput
                style={styles.passwordInput}
                placeholder="Password"
                placeholderTextColor="#888"
                secureTextEntry={!showPassword}
                value={password}
                onChangeText={setPassword}
                editable={!isLoggingIn} // Disable input while logging in
              />
              <TouchableOpacity
                style={styles.eyeButton}
                onPress={() => setShowPassword(!showPassword)}
                disabled={isLoggingIn}
              >
                <Image
                  source={
                    showPassword
                      ? require("../../assets/images/eye-open.png")
                      : require("../../assets/images/eye-closed.png")
                  }
                  style={styles.eyeIcon}
                />
              </TouchableOpacity>
            </View>

            {errorMessage ? (
              <Text style={styles.errorText}>{errorMessage}</Text>
            ) : null}

            <TouchableOpacity
              style={[styles.loginButton, isLoggingIn && { opacity: 0.7 }]}
              onPress={handleLogin}
              activeOpacity={0.8}
              disabled={isLoggingIn} // Disable button while loading
            >
              {isLoggingIn ? (
                <ActivityIndicator color="#fff" />
              ) : (
                <Text style={styles.loginText}>LOGIN</Text>
              )}
            </TouchableOpacity>
          </Animated.View>
        </KeyboardAvoidingView>
      </ImageBackground>
    </SafeAreaView>
  );
}

const styles = StyleSheet.create({
  container: { flex: 1 },
  background: {
    flex: 1,
    alignItems: "center",
    justifyContent: "center",
  },
  keyboardView: {
    flex: 1,
    width: "100%",
    alignItems: "center",
    justifyContent: "center",
  },
  card: {
    backgroundColor: "rgba(255,255,255,0.96)",
    width: width * 0.85,
    paddingVertical: 30,
    paddingHorizontal: 25,
    borderRadius: 25,
    alignItems: "center",
    borderWidth: 1,
    borderColor: "#880000",
    shadowColor: "#000",
    shadowOpacity: 0.15,
    shadowRadius: 5,
    elevation: 5,
  },
  logo: {
    width: 100,
    height: 100,
    resizeMode: "contain",
    marginBottom: 10,
  },
  welcomeText: {
    fontSize: 20,
    fontWeight: "bold",
    color: "#000",
    marginBottom: 15,
  },
  label: {
    alignSelf: "flex-start",
    fontSize: 13,
    color: "#333",
    marginBottom: 4,
  },
  input: {
    width: "100%",
    borderWidth: 1,
    borderColor: "#aaa",
    borderRadius: 8,
    paddingVertical: 10,
    paddingHorizontal: 12,
    fontSize: 14,
    marginBottom: 15,
  },
  passwordContainer: {
    width: "100%",
    flexDirection: "row",
    alignItems: "center",
    borderWidth: 1,
    borderColor: "#aaa",
    borderRadius: 8,
    marginBottom: 20,
  },
  passwordInput: {
    flex: 1,
    paddingVertical: 10,
    paddingHorizontal: 12,
    fontSize: 14,
  },
  eyeButton: {
    padding: 10,
  },
  eyeIcon: {
    width: 20,
    height: 20,
    tintColor: "#555",
  },
  loginButton: {
    backgroundColor: "#880000",
    borderRadius: 25,
    paddingVertical: 12,
    paddingHorizontal: 60,
  },
  loginText: {
    color: "#fff",
    fontWeight: "bold",
    fontSize: 15,
    letterSpacing: 1,
  },
  errorText: {
    color: "red",
    marginBottom: 10,
    alignSelf: "flex-start",
  },
});
